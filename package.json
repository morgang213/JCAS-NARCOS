{
  "name": "jcas-narcos",
  "version": "1.0.0",
  "private": true,
  "description": "JCAS-NARCOS Medication Box Tracker - Full Stack Application",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm --workspace=client start",
    "dev:server": "npm --workspace=server run dev",
    "build": "npm --workspace=client run build",
    "test": "npm --workspace=client test",
    "seed:admin": "npm --workspace=server run seed:admin"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
